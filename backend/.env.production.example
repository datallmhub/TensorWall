# =============================================================================
# TensorWall - Production Environment Configuration
# =============================================================================
# SECURITY: Copy this file to .env and set all values before deploying
# NEVER commit .env files with real credentials to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Environment Settings
# -----------------------------------------------------------------------------
ENVIRONMENT=production
DEBUG=false

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000

# -----------------------------------------------------------------------------
# CORS (add your production domains)
# -----------------------------------------------------------------------------
CORS_ORIGINS=["https://your-domain.com","https://admin.your-domain.com"]

# -----------------------------------------------------------------------------
# Database (REQUIRED - use strong credentials)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://tensorwall_user:STRONG_PASSWORD_HERE@db-host:5432/tensorwall
REDIS_URL=redis://:REDIS_PASSWORD@redis-host:6379/0

# -----------------------------------------------------------------------------
# JWT Authentication (REQUIRED - generate secure random key)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=GENERATE_A_SECURE_RANDOM_KEY_64_CHARS_MINIMUM
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# Cookie Settings (REQUIRED for HTTPS)
# -----------------------------------------------------------------------------
COOKIE_SECURE=true
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=lax

# -----------------------------------------------------------------------------
# LLM Provider URLs
# -----------------------------------------------------------------------------
OPENAI_API_URL=https://api.openai.com/v1
ANTHROPIC_API_URL=https://api.anthropic.com/v1
OLLAMA_API_URL=http://ollama-host:11434

# -----------------------------------------------------------------------------
# Audit & Privacy (GDPR compliant defaults)
# -----------------------------------------------------------------------------
AUDIT_RETENTION_DAYS=90
STORE_PROMPTS=false

# -----------------------------------------------------------------------------
# Email Alerts (Optional - for budget/security alerts)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=alerts@your-domain.com
SMTP_PASSWORD=SMTP_PASSWORD_HERE
ALERT_FROM_EMAIL=alerts@your-domain.com

# -----------------------------------------------------------------------------
# Gateway Performance
# -----------------------------------------------------------------------------
MAX_LATENCY_MS=50
DEFAULT_MAX_TOKENS=4096
DEFAULT_MAX_CONTEXT=128000

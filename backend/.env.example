# =============================================================================
# LLM Gateway - Environment Variables
# =============================================================================
# Copy to .env for local development
# In production (Fly.io), set via: fly secrets set KEY=value

# =============================================================================
# Environment
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=debug

# =============================================================================
# Server
# =============================================================================
HOST=0.0.0.0
PORT=8000

# =============================================================================
# CORS (comma-separated origins)
# =============================================================================
# Development
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
# Production: CORS_ORIGINS=https://app.example.com

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/llm_gateway
REDIS_URL=redis://localhost:6379

# =============================================================================
# JWT Authentication (REQUIRED)
# =============================================================================
# Generate secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=dev-secret-key-change-in-production

# =============================================================================
# LLM Providers
# =============================================================================
OPENAI_API_URL=https://api.openai.com/v1
OPENAI_API_KEY=
ANTHROPIC_API_URL=https://api.anthropic.com/v1
ANTHROPIC_API_KEY=

# =============================================================================
# Email Alerts (SMTP)
# =============================================================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=alerts@example.com
SMTP_FROM_NAME=LLM Gateway

# =============================================================================
# Gateway Settings
# =============================================================================
MAX_LATENCY_MS=50
DEFAULT_MAX_TOKENS=4096

# =============================================================================
# Audit
# =============================================================================
AUDIT_RETENTION_DAYS=90
STORE_PROMPTS=false
